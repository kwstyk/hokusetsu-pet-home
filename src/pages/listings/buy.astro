---
// src/pages/listings/buy.astro

import BaseLayout from '../../layouts/BaseLayout.astro';
import ListingCard from '../../components/listings/ListingCard.astro';
import { getListingsByDealType } from '../../data/listings';
import { SITE } from '../../config/site';
import ListingTabs from '../../components/listings/ListingTabs.astro';

const listings = getListingsByDealType('buy').filter(
  (l) => l.status === 'available',
);
---

<BaseLayout
  title="購入物件一覧｜北摂ペットホーム（仮）"
  description="北摂エリアのペット可マンション・戸建てを、ペット目線で選べます。"
>
    <header class="space-y-4">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <p class="text-[11px] font-semibold tracking-wide text-emerald-700">
            BUY
          </p>
          <h1 class="text-2xl md:text-3xl font-bold text-slate-900">
            購入物件を探す
          </h1>
          <p class="mt-2 text-sm text-slate-700">
            北摂エリアでペットと暮らすための購入向け物件を、少しずつ追加していく予定です。
          </p>
        </div>

        <ListingTabs active="buy" />
      </div>
    </header>

    <section aria-label="購入物件一覧">
      {listings.length === 0 ? (
        <p class="text-sm text-slate-600">
          現在、掲載中の購入物件はありません。LINEでご希望条件をお知らせください。
        </p>
      ) : (
        <div class="grid gap-6 md:grid-cols-2">
          {listings.map((listing) => (
            <ListingCard listing={listing} />
          ))}
        </div>
      )}
    </section>
  </main>
</BaseLayout>
