---
// src/pages/listings/index.astro

import ListingTabs from '../../components/listings/ListingTabs.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ListingCard from '../../components/listings/ListingCard.astro';
import { getAllListings } from '../../data/listings';
import { SITE } from '../../config/site';

const listings = getAllListings().filter(
  (l) => l.status === 'available',
);
---

<BaseLayout
  title="物件一覧｜北摂ペットホーム（仮）"
  description="北摂エリアのペット可賃貸・購入物件を、ペット条件から探せます。"
>
<main class="mx-auto max-w-5xl px-4 py-10 sm:px-6 lg:px-8 space-y-8">
    <header class="space-y-4">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <p class="text-[11px] font-semibold tracking-wide text-emerald-700">
            SEARCH
          </p>
          <h1 class="text-2xl md:text-3xl font-bold text-slate-900">
            物件を探す
          </h1>
          <p class="mt-2 text-sm text-slate-700">
            北摂エリアのペット可物件だけを、賃貸・購入に分けて掲載していく予定です。
          </p>
        </div>

        {/* ★ タブを右上に配置 */}
        <ListingTabs active="all" />
      </div>
    </header>

    <section aria-label="物件一覧">
      {listings.length === 0 ? (
        <p class="text-sm text-slate-600">
          現在、掲載中の物件はありません。LINEでご希望条件をお知らせください。
        </p>
      ) : (
        <div class="grid gap-6 md:grid-cols-2">
          {listings.map((listing) => (
            <ListingCard listing={listing} />
          ))}
        </div>
      )}
    </section>
  </main>
</BaseLayout>
