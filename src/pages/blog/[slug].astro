---
// src/pages/blog/[slug].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE } from '../../config/site';
import { getCollection, type CollectionEntry } from 'astro:content';

type BlogEntry = CollectionEntry<'blog'>;

export async function getStaticPaths() {
  const posts: BlogEntry[] = await getCollection(
    'blog',
    (entry: BlogEntry) => !entry.data.isDraft,
  );

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: BlogEntry;
}

const { post } = Astro.props as Props;

// ★ ここがポイント：MD をコンポーネントに変換
const { Content } = await post.render();

const pageTitle = `${post.data.title}｜ブログ｜${SITE.name}`;
const dateFormatter = new Intl.DateTimeFormat('ja-JP', { dateStyle: 'medium' });
---

<BaseLayout title={pageTitle}>
  <main class="mx-auto max-w-3xl px-4 py-10 sm:px-6 lg:px-8 space-y-8 text-sm text-slate-700">
    <header class="space-y-3">
      <p class="text-[11px] text-slate-500">ブログ・読みもの</p>
      <h1 class="text-2xl md:text-3xl font-bold text-slate-900">
        {post.data.title}
      </h1>

      <div class="flex flex-wrap items-center gap-3 text-[11px] text-slate-500">
        <span>
          公開日：{dateFormatter.format(post.data.publishedAt)}
        </span>
        {post.data.updatedAt && (
          <span>
            最終更新：{dateFormatter.format(post.data.updatedAt)}
          </span>
        )}
      </div>

      {post.data.tags && post.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 pt-1 text-[11px]">
          {post.data.tags.map((tag: string) => (
            <span class="rounded-full bg-slate-100 px-2 py-0.5 text-slate-700">
              {tag}
            </span>
          ))}
        </div>
      )}

      {post.data.description && (
        <p class="text-sm text-slate-700 leading-relaxed">
          {post.data.description}
        </p>
      )}
    </header>

    <article class="space-y-4 leading-relaxed">
      {/* Markdown 本文 */}
      <Content />
    </article>

    <section class="pt-4">
      <a
        href="/blog/"
        class="inline-flex items-center text-xs font-semibold text-emerald-700 hover:underline"
      >
        ← ブログ一覧に戻る
      </a>
    </section>
  </main>
</BaseLayout>
